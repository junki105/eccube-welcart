{% set Products = CustomizeNewProduct() %}
{% if Products|length > 0 %}
<div class="main-image">
	<ul class="main_slider">
		{% for Product in Products %}
		<li>
			<a href="{{ url('product_detail', {'id': Product.id}) }}"><img src="{{ asset(Product.main_list_image|no_image_product, 'save_image') }}" class="img-responsive"></a>
		</li>
		{% endfor %}
	</ul>
</div><!-- main-image -->
{% endif %}